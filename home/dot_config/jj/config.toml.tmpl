"$schema" = "https://jj-vcs.github.io/jj/latest/config-schema.json"

[git]
# This is apparently going to be the default in the future, and setting this
# now puts me ahead of the curve and also helps get me the:
#
#   core.checkStat minimal
#
# setting I need in Git on Docker Desktop on OSX.
subprocess = true

[user]
name = "Don Petersen"
email = {{ .email | quote }}

[ui]
default-command = "log"
diff.tool = "delta"
diff-editor = ["nvim", "-c", "DiffEditor $left $right $output"]

[revset-aliases]
mylocal = "visible_heads() & mine()"

[merge-tools.diffconflicts]
program = "nvim"
merge-args = [
        "-c",
        "let g:jj_diffconflicts_marker_length=$marker_length",
        "-c",
        "JJDiffConflicts!",
        "$output",
        "$base",
        "$left",
        "$right",
]
merge-tool-edits-conflict-markers = true

# This does have a bug where it will format schema.rb. I'm not sure there's an
# easy way to fix this with JJ's current capabilities.
[fix.tools.standardrb]
command = ["bin/standardrb", "--fix", "--stdin", "$path", "--stderr"]
patterns = ["glob:'**/*.rb'", "glob:'**/*.rake'"]
